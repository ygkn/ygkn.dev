---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title !== "" ? `${title} |` : ""}ygkn.dev</title>
  </head>
  <body>
    <slot />
  </body>
</html>
